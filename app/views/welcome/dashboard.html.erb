<% provide :title, "Dashboard" %>
<h1>Dashboard</h1>
<div class="row">
  <div class="span2">
	<ul class="nav nav-list">
	  <li>
	    <a href=<%= root_path %> >
	      <i class="icon-home"></i>
	      Home
	    </a>
	  </li>
	  <li>
	    <a href=<%= edit_user_registration_path %> >
	      <i class="icon-cog"></i>
	      Settings
	    </a>
	  </li>
	</ul>
  </div>

  <div class="span6">
  	<h2>Link your social media accounts in the right tab!</h2>
  	<h2>After that you can post messages from this tab!</h2>
  	<div class="span2">

  	</div>
  	<div class="span2">
  		<% if !@twitter_not_link %>
 			<%= image_tag("twitter_64.png") %>
  		<% end %>
  	</div>
  	<div class="span2">
  		
  	</div>
  </div>

  <div class="span4">
  	<div class="tabbable"> <!-- Only required for left/right tabs -->
	  <ul class="nav nav-tabs">
	    <li class="active"><a href="#tab1" data-toggle="tab">Foursquare</a></li>
	    <li><a href="#tab2" data-toggle="tab">Twitter</a></li>
	    <li><a href="#tab3" data-toggle="tab">Facebook</a></li>
	  </ul>
	  <div class="tab-content">
	    <div class="tab-pane active" id="tab1">
	      <div class="btn-group">
			  <a class="btn btn-success" href="#">
			  </a>
		  </div>
	    </div>
	    <div class="tab-pane" id="tab2">
	      <div class="btn-group">
			  <a class="btn <%= @twitter_button_class %>" href="<%= @twitter_path %>">
			  	<%= @twitter_text %>
			  </a>
		  </div>
	    </div>
	    <div class="tab-pane" id="tab3">
	      <p>Howdy, I'm in Section 3.</p>
	    </div>
	  </div>
	</div>
  </div>

</div>